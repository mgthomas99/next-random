{
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "es2015",

        "allowUnreachableCode": false,
        "alwaysStrict": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strict": true,

        "declaration": true,
        "sourceMap": true,
        "emitDecoratorMetadata": false,
        "importHelpers": false
    }
}
