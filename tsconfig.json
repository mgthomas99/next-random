{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "es2015",

        "allowUnreachableCode": false,
        "alwaysStrict": true,
        "charset": "utf8",
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strict": true,

        "declaration": true,
        "sourceMap": true,
        "emitDecoratorMetadata": false,
        "importHelpers": false
    },

    "include": [
        "src/"
    ]
}
